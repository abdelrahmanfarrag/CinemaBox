<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    app:cardBackgroundColor="#3C9D99"
    app:cardCornerRadius="4dp">

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/author_img"
        android:layout_width="@dimen/small_view_width"
        android:layout_height="@dimen/small_view_height"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:src="@drawable/user"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:fontFamily="@font/fredoka_one"
        android:textColor="@color/white"
        android:padding="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="@+id/author_img"
        app:layout_constraintStart_toEndOf="@+id/author_img"
        app:layout_constraintTop_toTopOf="@+id/author_img"/>

    <TextView
        android:id="@+id/author_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="@dimen/small_margin"
        android:fontFamily="@font/fredoka_one"
        android:padding="@dimen/small_padding"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/author_img"
        app:layout_constraintTop_toBottomOf="@+id/author_img"/>
  </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>