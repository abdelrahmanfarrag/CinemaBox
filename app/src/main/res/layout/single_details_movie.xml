<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/xx_small_margin"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="@dimen/large_padding">

  <android.support.constraint.ConstraintLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/single_details_movie_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:alpha=".7"
        android:contentDescription="@null"
        android:background="@drawable/ripple_effect"
        android:scaleType="fitXY"
        android:src="@drawable/no_preview"/>

    <TextView
        android:id="@+id/single_details_movie_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:fontFamily="@font/fredoka_one"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/single_details_movie_image"
        app:layout_constraintEnd_toEndOf="@+id/single_details_movie_image"
        app:layout_constraintStart_toStartOf="parent"/>

  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>